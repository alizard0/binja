{% extends "templates/core/base.jinja2" %}
{% block body %}
<main class="container">
	<hgroup>
		<h1>Hello, World!</h1>
		<p>This is the base template for Binja!</p>
	</hgroup>
	{% block blog %}
	<h2>Latest blog posts</h2>
	<ul>
	{% for post in posts %}
	<li><a href="{{ post.url }}">{{ post.title }}></li>
	{% endfor %}
	</ul>
	{% endblock blog %}
</main>
{% endblock body %}