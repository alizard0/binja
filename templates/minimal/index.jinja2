{% extends  "templates/core/base.jinja2" %}
{% block body %}
<main class="container">
	<nav>
	  <ul>
	    <li><a href="./index.html"><strong>{{ title }}</strong></a></li>
	  </ul>
	  <ul>
	  	{% if about_page %}
	    <li><a href="./about.html" class="contrast">About</a></li>
	    {% endif %}
	  </ul>
	</nav>
	{% block content %}
	<hgroup>
		<h1>Hello, World!</h1>
		<p>This is the base template for Binja!</p>
	</hgroup>
	{% if blog %}
	{% for row in posts %}
		<div class="grid">
		{% for post in row %}
			<article>
				<hgroup>
					<small>{% for tag in post.tags %}{{ tag }} {% endfor %}</small>
					<h2><a href="./blog/{{ post.document }}.html">{{ post.title }}</a></h2>
					<p>{{ post.description }}
				</hgroup>
			</article>
		{% endfor %}
		</div>	
	{% endfor %}
	{% endif %}
	{% endblock content %}
</main>
{% endblock body %}