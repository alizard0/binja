{% extends  "templates/core/base.jinja2" %}
{% block assets_css %}
{{ super() }}
<style>
h1 {
	color: #0F3888;
}

h2, h3 {
	color: #5C7EF8;
}

a {
	text-decoration: none;
}

body {
	padding-left: 5%;
	padding-right: 5%;
}
</style>
{% endblock assets_css %}
{% block body %}
<main class="container">
	<nav>
	  <ul>
	    <li><a href="{{ website }}"><strong>{{ title }}</strong></a></li>
	  </ul>
	  <ul>
	  	{% if about_page %}
	    <li><a href="{{ website }}/about.html" class="contrast">About</a></li>
	    {% endif %}
	  </ul>
	</nav>
	{% block content %}
	{% if blog %}
	{% for row in posts %}
		<div class="grid">
		{% for post in row %}
			<article>
				<hgroup>
					<small>{% for tag in post.tags %}{{ tag }} {% endfor %}</small>
					<h2><a href="./blog/{{ post.document }}.html">{{ post.title }}</a></h2>
					<p>{{ post.description }}
				</hgroup>
			</article>
		{% endfor %}
		</div>	
	{% endfor %}
	{% endif %}
	{% endblock content %}
</main>
{% endblock body %}